--[[
    Script: WalvyXploit GUI with Timed Key System
    Description: A Roblox GUI script featuring a key system that allows access for 8 hours per key activation.
                 This version includes bug fixes and robustness improvements.
    Author: Walvy
    Version: 1.4 (Bug Fixes & Hardening)
]]

--================================================================--
-- Services and Configuration
--================================================================--

local Players = game:GetService("Players")
local DataStoreService = game:GetService("DataStoreService")

-- Configuration Constants
local CONFIG = {
    CORRECT_KEY = "WalvyKey",
    DISCORD_INVITE_LINK = "https://discord.gg/your-invite-link",
    KEY_VALID_DURATION = 28800, -- 8 hours in seconds (8 * 60 * 60)
    DATASTORE_NAME = "KeyActivationTimeStore"
}

-- DataStore for saving key activation times
local keyTimeStore = DataStoreService:GetDataStore(CONFIG.DATASTORE_NAME)

--================================================================--
-- GUI Component Constructors
--================================================================--

-- Forward declaration for the reopen button so other components can access it
local reopenButton

--- A utility function to create and parent a UICorner.
local function createCorner(parent, radius)
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, radius)
    corner.Parent = parent
end

--- Creates the Key System window where the player enters their key.
local function createKeySystem(parent)
    local keyFrame = Instance.new("Frame")
    keyFrame.Name = "KeyFrame"
    keyFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    keyFrame.Size = UDim2.new(0, 300, 0, 180)
    keyFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
    keyFrame.BackgroundColor3 = Color3.fromRGB(25, 28, 41)
    keyFrame.Parent = parent
    createCorner(keyFrame, 8)

    local title = Instance.new("TextLabel")
    title.Name = "Title"
    title.Size = UDim2.new(1, 0, 0, 30)
    title.Text = "Enter Key"
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.Font = Enum.Font.SourceSansBold
    title.TextSize = 18
    title.BackgroundTransparency = 1
    title.Parent = keyFrame

    local input = Instance.new("TextBox")
    input.Name = "Input"
    input.Size = UDim2.new(0, 260, 0, 40)
    input.Position = UDim2.new(0.5, -130, 0, 40)
    input.PlaceholderText = "Your Key"
    input.Font = Enum.Font.SourceSans
    input.TextSize = 16
    input.Parent = keyFrame

    local status = Instance.new("TextLabel")
    status.Name = "Status"
    status.Size = UDim2.new(1, -40, 0, 20)
    status.Position = UDim2.new(0.5, 0, 0, 85)
    status.AnchorPoint = Vector2.new(0.5, 0)
    status.Text = ""
    status.Font = Enum.Font.SourceSans
    status.TextSize = 14
    status.TextColor3 = Color3.fromRGB(255, 80, 80)
    status.BackgroundTransparency = 1
    status.Parent = keyFrame

    local submit = Instance.new("TextButton")
    submit.Name = "Submit"
    submit.Size = UDim2.new(0, 100, 0, 40)
    submit.Position = UDim2.new(0.5, -50, 0, 115)
    submit.Text = "Submit"
    submit.Font = Enum.Font.SourceSansBold
    submit.TextSize = 18
    submit.BackgroundColor3 = Color3.fromRGB(50, 58, 82)
    submit.TextColor3 = Color3.fromRGB(255, 255, 255)
    submit.Parent = keyFrame
    createCorner(submit, 8)

    return {
        frame = keyFrame,
        input = input,
        submit = submit,
        status = status
    }
end

