    local reopenBtn = Instance.new("ImageButton"); reopenBtn.Name = "ReopenButton"; reopenBtn.Size = UDim2.new(0, 80, 0, 80); reopenBtn.AnchorPoint = Vector2.new(0.5, 0.5); reopenBtn.Position = UDim2.new(0.5, 0, 0.5, 0); reopenBtn.Image = CONFIG.REOPEN_BUTTON_IMAGE; reopenBtn.BackgroundTransparency = 1; reopenBtn.Visible = false; reopenBtn.Parent = self.screenGui; local corner = Instance.new("UICorner"); corner.CornerRadius = UDim.new(0, 12); corner.Parent = reopenBtn; return reopenBtn
